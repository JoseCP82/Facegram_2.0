<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane accessibleRole="NODE" prefHeight="170.0" prefWidth="305.0" stylesheets="@../../../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.facegram.controllers.PostController">
   <children>
      <Button fx:id="btnLike" layoutX="188.0" layoutY="118.0" mnemonicParsing="false" onAction="#likeStatus" style="-fx-background-color: lightgrey;" text="Like" />
      <Button fx:id="btnComment" layoutX="231.0" layoutY="118.0" mnemonicParsing="false" onAction="#showComments" style="-fx-background-color: lightgrey;" text="Comment" />
      <Label fx:id="lblUser" layoutX="6.0" layoutY="22.0" text="Label">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
      <Label fx:id="lblDate" layoutX="6.0" layoutY="100.0" text="Label" />
      <TextArea fx:id="txtContent" editable="false" layoutX="6.0" layoutY="48.0" prefHeight="43.0" prefWidth="293.0" />
      <Separator layoutX="3.0" layoutY="12.0" prefWidth="300.0" style="-fx-background-color: grey;" />
      <Separator layoutX="3.0" layoutY="155.0" prefWidth="300.0" style="-fx-background-color: grey;" />
      <Button fx:id="btnDelete" disable="true" layoutX="6.0" layoutY="118.0" mnemonicParsing="false" onAction="#deletePost" style="-fx-background-color: lightgrey;" styleClass="boton-cerrar" text="Bye" />
      <Button fx:id="btnEdit" disable="true" layoutX="48.0" layoutY="118.0" mnemonicParsing="false" onAction="#updatePost" style="-fx-background-color: lightgrey;" styleClass="boton-edit" text="Edit" />
   </children>
</AnchorPane>
